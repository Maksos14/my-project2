const {user} = useContext(Context); // Добавляем user из контекста

const addPc = async () => {
    // Проверяем авторизацию
    if (!user.isAuth) {
        alert('Для добавления компьютера необходимо войти в систему!');
        return;
    }
    
    try {
        const formData = new FormData();
        formData.append('name', name);
        formData.append('price', `${price}`);
        formData.append('img', file);
        formData.append('info', JSON.stringify(info));
        
        await createPc(formData);
        onHide();
        // Можно добавить обновление списка
    } catch (e) {
        alert(e.response?.data?.message || 'Ошибка при создании компьютера');
    }
}